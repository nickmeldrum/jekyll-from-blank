{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "nickmeldrum.com blog testing infrastructure",
  "Resources": {
    "NickMeldrumComBlogTestingBucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "AccessControl": "Private"
      }
    },
    "SampleBucketPolicy" : {
      "Type" : "AWS::S3::BucketPolicy",
      "Properties" : {
        "Bucket" : {"Ref" : "NickMeldrumComBlogTestingBucket"},
        "PolicyDocument": {
          "Id": "Origin-Identity-Get-Access",
          "Statement": [{
            "Action": ["s3:GetObject"],
            "Effect": "Allow",
            "Resource": { "Fn::Join" : ["", ["arn:aws:s3:::", { "Ref" : "NickMeldrumComBlogTestingBucket" } , "/*" ]]},
            "Principal": {
              "AWS": "arn:aws:iam::cloudfront:user/CloudFront Origin Access Identity EYMUL4VP44ACS"
            }
          }]
        }
      }
    },
    "NickMeldrumComBlogTestingCloudFormation": {
      "Type": "AWS::CloudFront::Distribution",
      "Properties": {
        "DistributionConfig": {
          "Comment": "testing cloudformation",
          "Enabled": "true",
          "PriceClass": "PriceClass_100",
          "DefaultRootObject" : "index.html",
          "ViewerCertificate" : { "CloudFrontDefaultCertificate" : "true" },
          "Logging" : {
            "IncludeCookies" : "false",
            "Bucket" : "nickmeldrum-com-logs.s3.amazonaws.com",
            "Prefix" : "testing-cf-logs/"
          },
          "DefaultCacheBehavior" : {
            "AllowedMethods" : [ "GET", "HEAD" ],
            "TargetOriginId" : "s3-testing-cloudformation",
            "ForwardedValues" : {
              "QueryString" : "false",
              "Cookies" : { "Forward" : "none" }
            },
            "ViewerProtocolPolicy" : "redirect-to-https"
          },
          "Origins": [
            {
              "DomainName": {"Fn::GetAtt": ["NickMeldrumComBlogTestingBucket", "DomainName"]},
              "Id" : "s3-testing-cloudformation",
              "S3OriginConfig" : {
                "OriginAccessIdentity" : "origin-access-identity/cloudfront/EYMUL4VP44ACS"
              }
            }
          ]
        }
      }
    }
  }
}
